@model PomodoroTimer.ViewModels.CursoViewModel

@{
    ViewBag.Title = "Cadastrar";
}

@section Estilo{
    <style>
        /*

            FORMULÁRIO DE CADASTRO

        */
        body{
            background-color: #f7f7f7;
        }

        .container {
            margin-top: 70px;
            margin-bottom: 70px;
        }

        .titulo {
            font-family: 'Gotham Light';
            font-size: 32px;
            letter-spacing: 3px;
            text-transform: uppercase;
            text-align: center;
            color: #caa013;
            font-weight: 600;
        }

        .textarea {
            width: 100%;
            border: none;
            background: transparent;
            border: none;
            border-bottom: 1px solid #333;
            margin-bottom: 24px;
            border-radius: 0;
            padding: 16px 20px;
            font-family: 'Gotham Light';
            font-size: 15px;
            color: #333;
            resize: none;
            transition: border-color 0.3s;
            max-width: 100%;
        }

        .cadastro{
            margin-top: 50px;
            padding: 35px 20px;
            color: #333;
        }

        .btn-enviar {
            height: 50px;
            line-height: 48px;
            border: none;
            background-color: #caa013;
            color: #fff;
            width: 100%;
            font-size: 13px;
            text-transform: uppercase;
            font-weight: bold;
            letter-spacing: 1px;
            border-radius: 0 !important;
            font-family: 'Open Sans';
            margin-left: 130px;
            margin-top: 30px;
        }

            .btn-enviar:hover {
                color: #caa013;
                background-color: #fff;
                transition: 0.5s;
            }

         .box{

         }
    </style>
    }
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 box">
            <h2 class="titulo">Cadastrar Curso</h2>
            @MyHelper.Message(Model.Msg)
            <div class="cadastro">
                @using (@Html.BeginForm())
            {

                    <div class="form-group" style="font-family: 'Gotham Light';">
                        @Html.LabelFor(m => m.Nome)
                        @Html.TextBoxFor(m => m.Nome, new { @class = "textarea"})
                        @Html.ValidationMessageFor(m => m.Nome)
                    </div>

                    @MyHelper.Button("Cadastrar", "btn btn-enviar")
                }

            </div>
        </div>
    </div>
</div>

    @section Scripts{
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery-validate-fixes.js"></script>
        <script>
            var isValid = false;

            $(document).ready(function () {
                $("#Cadastrar").click(function () {
                    validarNome();
                });
            });

            function validarNome() {
                $.ajax({
                    url: "http://localhost:39324/Curso/VerificarNome",
                    type: "GET",
                    data: { "nome": $("#Nome").val() },
                    success: function (data) {
                        if (data.existe) {
                            $("#Nome").parent().addClass("has-error");
                            $("#Nome").focus();
                            $("#Nome").parent().find(".field-validation-valid").text("Esse curso já está cadastrado");
                        } else {
                            $("form").submit();
                        }
                    }
                });
            }
        </script>
    }
