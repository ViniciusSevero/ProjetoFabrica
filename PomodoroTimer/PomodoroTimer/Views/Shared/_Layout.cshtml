<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    @RenderSection("Estilo", false)
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <div class="navbar navbar-inverse navbar-fixed-top navbar-custom" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pomodoro Timer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand page-scroll" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cadastros<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Aluno", "Cadastrar", "Aluno")</li>
                                <li> @Html.ActionLink("Curso", "Cadastrar", "Curso")</li>
                                <li> @Html.ActionLink("Materia", "Cadastrar", "Materia")</li>
                                <li> @Html.ActionLink("Tipo de Sessão", "Cadastrar", "TipoSessao")</li>
                                <li> @Html.ActionLink("Administrador", "Cadastrar", "Administrador")</li>
                            </ul>
                        </li>
                        <li> @Html.ActionLink("Iniciar Sessão", "Index", "Sessao")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Gráficos<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Tempo estudados por mês", "MinutosMensalAluno", "Graficos")</li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Olá @User.Identity.Name<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Sair", "Sair", "Autenticador")</li>
                            </ul>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                        <li class="hidden">
                            <a class="page-scroll" href="#page-top"></a>
                        </li>
                        <li>
                            <a class="page-scroll" href="#secao1">Secao1</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="#secao2">Secao2</a>
                        </li>
                        <li>
                            <a class="page-scroll" href="#secao3">Secao3</a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Cadastrar</a></li>
                        <li>
                            <!--
                            <a href="@Url.Action("Logar", "Autenticador")">
                                <span class="glyphicon glyphicon-log-in" data-toggle="modal" data-target="#modalLogar"></span>
                                Entrar
                            </a>    
                            -->
                            <a href="#">
                                <span class="glyphicon glyphicon-log-in" data-toggle="modal" data-target="#modalLogar">
                                    Entrar
                                </span>
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>

    @RenderSection("messageFluid", false)

    @RenderBody()
    <div class="container-fluid">

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Área para as páginas adicionarem conteúdos-->
    @RenderSection("Scripts", false)
</body>
</html>