 <!-- relogio -->
<div class="relogio">
    <div id="ponteiroSegundo"></div>
    <div id="ponteiroMinuto"></div>
    <div id="ponteiroHora"></div>
    <div id="centro"></div>
</div>

    <div class="row">
        <div class="col-md-12 text-center">
            <ul class="digital">
                <li id="horas">00</li>
                <li>:</li>
                <li id="minutos">00</li>
                <li>:</li>
                <li id="segundos">00</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <button id="start" onclick="start()" class="btn btn-success"><span class="glyphicon glyphicon-play"></span></button>
            <button id="stop" onclick="stop()" class="btn btn-danger"><span class="glyphicon glyphicon-stop"></span></button>
            <button id="pause" onclick="pause()" class="btn"><span class="glyphicon glyphicon-pause"></span></button>
        </div>
    </div>
